<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal"
    android:padding="@dimen/_4sdp">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/ll_avatar"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:visibility="gone"
            android:background="@drawable/grey_avatar" />

        <com.advantal.shieldcrypt.utils_pkg.RoundedImageView2
            android:id="@+id/userImg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/ic_baseline_person_24" />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toLeftOf="@+id/ll_end_call"
        android:layout_toRightOf="@+id/ll_avatar"
        android:orientation="vertical">

        <com.advantal.shieldcrypt.sip.font_family.PoppinsTVRegular
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_medium"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="Test User"
            android:textColor="@color/mode_black_white"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_end_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_end_call"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:background="@drawable/decline_call" />

    </LinearLayout>

</RelativeLayout>
