<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_14sdp">

    <TextView
        android:id="@+id/text_gchat_date_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center"
        android:text="Yesterday"
        android:textColor="@color/grey_clr"
        android:textStyle="normal"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/layout_gchat_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_gchat_date_send"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <com.advantal.shieldcrypt.utils_pkg.RoundedImageView2
            android:id="@+id/read_msg_ic"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/person_ic" />

        <LinearLayout
            android:id="@+id/layout_gchat_container_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/send_msg_bckrd"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_gchat_message_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/manrope_regular"
                android:maxWidth="@dimen/_260sdp"
                android:minWidth="@dimen/_80sdp"
                android:text="This is a Message"
                android:textColor="@color/black_clr"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/text_gchat_timestamp_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/manrope_regular"
                android:text="10:00 am"
                android:textColor="@color/black_clr"
                android:textSize="@dimen/_8sdp"
                android:textStyle="normal" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>