<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_clr_lgn"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
       >

        <LinearLayout
            android:id="@+id/menu_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:background="@color/background_clr"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/menu_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/background_clr"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="3">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_backarrow"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_weight="0.1"
                    android:onClick="onClick"
                    android:src="@drawable/ic_backarrow_chat" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="center"
                    android:layout_weight="2.6"
                    android:background="?attr/colorPrimary"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_scrollFlags="scroll|enterAlways|snap"
                    app:title="@string/app_name"
                    app:titleTextAppearance="@style/AppThemeLight.AppBarOverlays"
                    app:titleTextColor="@android:color/white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/search_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_weight="0.2"
                    android:onClick="onClick"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_search" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/three_dots_img"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_weight="0.2"
                    android:onClick="onClick"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_three_dots" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/manrope_semibold"
                    android:onClick="onClick"
                    android:padding="@dimen/_2sdp"
                    android:text="Send"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_minus5sdp"
                android:layout_weight="1.5"
                android:background="@color/background_clr"
                android:orientation="horizontal"
                android:visibility="gone">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/search_back"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_weight="0.1"
                    android:onClick="onClick"
                    android:src="@drawable/ic_backarrow_chat" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/search_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/manrope_medium"
                    android:hint="Search..."
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="normal"
                    android:visibility="visible" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_parent_layout"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center|start"
            android:text="All Contact"
            android:textColor="@color/light_grey_clr"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_contact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/msg"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            tools:listitem="@layout/contact_item_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_alphabets"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            tools:listitem="@layout/contact_aplha_item_view" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/contact_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_contact_fab_arrow" />


        <FrameLayout
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </RelativeLayout>
</layout>