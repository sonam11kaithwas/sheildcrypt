<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_grey"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/place_holder"
        android:visibility="gone"></View>

    <RelativeLayout
        android:id="@+id/rl_alphabates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingTop="@dimen/_9sdp"
        android:paddingRight="@dimen/_7sdp">

        <com.advantal.shieldcrypt.sip.font_family.PoppinsTVMedium
            android:id="@+id/tv_char"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:text="d"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_alphabates"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/grey_avatar" />

            <ImageView
                android:id="@+id/iv_selected_icon"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/ic_right_blue_round"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <com.advantal.shieldcrypt.sip.font_family.PoppinsTVRegular
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Test User"
                android:textColor="@color/mode_black_white"
                android:textSize="@dimen/_12sdp" />


            <com.advantal.shieldcrypt.sip.font_family.PoppinsTVRegular
                android:id="@+id/tv_already_added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Already Added"
                android:textColor="@color/mode_black_white"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <com.advantal.shieldcrypt.sip.font_family.PoppinsTVRegular
                android:id="@+id/tv_extension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/mode_black_white"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
