<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|center_vertical"
    android:orientation="vertical"
    android:id="@+id/mBottomSheetLayout"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/_100sdp"
    android:background="@drawable/rounded_dialog"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <ImageView
            android:id="@+id/bottom_sheet_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_video_bottom_sheet_down_arrow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/switchCamImg"
            android:layout_width="@dimen/call_screen_button"
            android:layout_height="@dimen/call_screen_button"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/ic_cam_rotate1_new" />

        <ImageView
            android:id="@+id/stopPreviewImg"
            android:layout_width="@dimen/call_screen_button"
            android:layout_height="@dimen/call_screen_button"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/ic_vid_on"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/muteImg"
            android:layout_width="@dimen/call_screen_button"
            android:layout_height="@dimen/call_screen_button"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/ic_video_unhold"/>

        <ImageView
            android:id="@+id/declineImgBtn"
            android:layout_width="@dimen/call_screen_button"
            android:layout_height="@dimen/call_screen_button"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/decline_call"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/light_grey_clr"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:filterTouchesWhenObscured="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/rlAddParticipants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp">

                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/ll_avatar"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">

                    <com.advantal.shieldcrypt.utils_pkg.RoundedImageView2
                        android:id="@+id/userImg"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/ic_add_participant_video" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ll_avatar"
                    android:orientation="vertical">
                    <com.advantal.shieldcrypt.sip.font_family.PoppinsTVRegular
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="Add participant"
                        android:fontFamily="@font/manrope_medium"
                        android:textColor="@color/mode_black_white"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvVideoConAddedContact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/row_conf_call">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
