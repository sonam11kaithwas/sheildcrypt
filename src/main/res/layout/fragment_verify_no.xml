        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/digit_code_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center"
            android:text="@string/enter_6_digit_code"
            android:textColor="@color/light_grey_clr"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otp_layout" />

        <LinearLayout
            android:id="@+id/sms_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/digit_code_txt"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/background_phone_view"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/digit_code_txt">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="@dimen/_19sdp"
                android:layout_gravity="start|center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:src="@drawable/send_ic" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="start|center"
                android:layout_marginLeft="@dimen/_8sdp"

                android:layout_weight="1.3"
                android:fontFamily="@font/manrope_regular"

                android:text="@string/resend_sms"
                android:textColor="@color/black_clr"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:inputType="number"
                android:text="Resend"
                android:textColor="@color/background_clr"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:id="@+id/otp_timer"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/call_me_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/sms_layout"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/background_phone_view"
            android:gravity="center|start"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sms_layout">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_19sdp"
                android:layout_gravity="start|center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:src="@drawable/call_me_ic" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="start|center"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_weight="1.6"

                android:fontFamily="@font/manrope_regular"
                android:text="@string/call_me"
                android:textColor="@color/black_clr"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="0.2"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:inputType="number"
                android:text="1:00"

                android:textColor="@color/black_clr"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_button"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_rectangle_shap_"
            android:fontFamily="@font/manrope_semibold"
            android:gravity="center"
            android:onClick="myClickListner"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
