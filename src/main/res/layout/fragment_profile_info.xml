    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_bar">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mob_num_lable_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/manrope_regular"
            android:text="@string/please_provide_your_name_and_an_optional_profile_photo"
            android:textAlignment="center"
            android:textColor="@color/black_clr"
            android:textSize="@dimen/_14sdp"
            android:textStyle="normal" />

<!--        <androidx.appcompat.widget.AppCompatImageView-->
<!--            android:id="@+id/profile_pick_image"-->
<!--            android:layout_width="@dimen/_110sdp"-->
<!--            android:layout_height="@dimen/_110sdp"-->
