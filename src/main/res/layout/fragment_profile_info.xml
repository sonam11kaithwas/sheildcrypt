        <com.advantal.shieldcrypt.utils_pkg.RoundedImageView2
            android:id="@+id/userImg"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_below="@+id/mob_num_lable_txt"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:src="@drawable/one_person" />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/mob_num_lable_txt"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_50sdp" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPickerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/userImg"
            android:layout_alignBottom="@+id/userImg"
            android:src="@drawable/ic_pick_camera"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/digit_code_txt"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/imgPickerBtn"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center|start"
            android:text="First Name"
            android:textColor="@color/grey_clr"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/sms_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/digit_code_txt"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/background_phone_view"
            android:gravity="center|start"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/name_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/manrope_regular"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:src="@drawable/send_ic"
                android:textColor="@color/black_clr" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/last_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sms_layout"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center|start"
            android:text="@string/last_name"
            android:textColor="@color/grey_clr"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/lastname_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/last_txt"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/background_phone_view"
            android:gravity="center|start"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/lastname_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/manrope_regular"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:src="@drawable/send_ic"
                android:textColor="@color/black_clr" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phone_number_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:cursorVisible="false"
            android:focusable="false"
            android:layout_below="@+id/lastname_layout"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center|start"
            android:text="Phone Number"
            android:textColor="@color/grey_clr"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/phone_number_txt"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/background_phone_greyview"
            android:gravity="center|start"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phone_num_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/manrope_regular"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:editable="false"
                android:inputType="none"
                android:src="@drawable/send_ic"
                android:textColor="@color/black_clr" />

        </LinearLayout>






        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_info"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/phone_layout"
            android:background="@drawable/bluecustom_bordered_ripple"
            android:fontFamily="@font/manrope_semibold"
            android:gravity="center"
            android:onClick="myClickListner"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />


    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
