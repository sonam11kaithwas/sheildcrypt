<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:id="@+id/menu_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:background="@color/background_clr"
        android:gravity="center"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_backarrow"
            android:layout_width="0dp"
            android:layout_height="@dimen/_16sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_weight="0.1"
            android:onClick="onClick"
            android:src="@drawable/ic_backarrow_chat" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:layout_weight="2.6"
            android:background="?attr/colorPrimary"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:title="@string/camera_lable"
            app:titleTextAppearance="@style/AppThemeLight.AppBarOverlays"
            app:titleTextColor="@android:color/white" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frmaelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/menu_parent_layout">


        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </androidx.camera.view.PreviewView>

        <ImageView
            android:id="@+id/appImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_clr"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/img_camerax_flash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onClick"
            android:padding="@dimen/_20sdp"
            android:src="@drawable/ic_camerax_flash" />

        <ImageView
            android:id="@+id/img_capture_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/_52sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:elevation="2dp"

            android:onClick="onClick"
            android:src="@drawable/ic_capture_image"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/camera_preview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:elevation="2dp"
            android:onClick="onClick"
            android:src="@drawable/ic_camera_prev" />

    </LinearLayout>



</RelativeLayout>
