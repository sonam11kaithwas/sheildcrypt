<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_color">

    <LinearLayout
        android:id="@+id/ll_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true">


        <include
            android:id="@+id/include_lay"
            layout="@layout/online_offline_states_layout"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"

        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toRightOf="@+id/ll_avatar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"

            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/display_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_toLeftOf="@+id/tv_date"
                android:fontFamily="@font/manrope_medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Test User"
                android:textColor="@color/black_clr"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date"
                android:layout_width="35dp"
                android:layout_height="4dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/manrope_regular"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="8:00 am"
                android:textColor="#AAAAAA"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/contact_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/tv_chat_count"
                android:fontFamily="@font/manrope_medium"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="dflsdkfsdjf"
                android:textColor="@color/grey_clr"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_chat_count"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingTop="@dimen/_2sdp"
                android:text="4"
                android:textColor="@color/colorPrimary"
                android:visibility="visible" />
            <!--
              <androidx.appcompat.widget.AppCompatImageView
                  android:id="@+id/tv_chat_count"
                  android:layout_width="@dimen/_15sdp"
                  android:layout_height="@dimen/_12sdp"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:gravity="center_vertical"
                  android:paddingLeft="@dimen/_4sdp"
                  android:paddingTop="@dimen/_2sdp"
                  android:paddingRight="@dimen/_2sdp"
                  android:paddingBottom="@dimen/_2sdp"
                  android:src="@drawable/ic_mark_read"
                  android:visibility="visible" />
            -->

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_minus10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_minus8sdp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:background="@color/grey_clr" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>


