<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentTop="true"
        android:background="@color/background_clr"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:onClick="onClick"
            android:src="@drawable/ic_baseline_arrow_back_24" />


        <TextView
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_15sdp"
            android:background="?attr/colorPrimary"
            android:fontFamily="@font/manrope_medium"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_14sdp"
            android:onClick="onClick"
            android:visibility="gone"
            android:src="@drawable/ic_gallery_folder_menu" />
    </LinearLayout>

    <com.advantal.shieldcrypt.utils_pkg.RoundedImageView2
        android:id="@+id/userImg"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_below="@+id/menu_layout"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/one_person" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/menu_layout"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_50sdp" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgPickerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/userImg"
        android:layout_alignBottom="@+id/userImg"
        android:src="@drawable/ic_pick_camera"/>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_txt"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/userImg"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center|start"
        android:text="@string/first_name"
        android:textColor="@color/grey_clr"
        android:textSize="@dimen/_12sdp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/name_txt"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"

        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/background_phone_view"
        android:gravity="center|start"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/name_edt"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="match_parent"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/manrope_regular"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:layout_weight="1.8"
            android:src="@drawable/send_ic"
            android:textColor="@color/black_clr" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/update_profile"
            android:layout_width="30dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_14sdp"
            android:layout_weight="0.2"
            android:onClick="onClick"
            android:src="@drawable/edit_icon" />


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/last_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_layout"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center|start"
        android:text="@string/last_name"
        android:textColor="@color/grey_clr"
        android:visibility="gone"
        android:textSize="@dimen/_12sdp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/lastname_layout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/last_txt"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/background_phone_view"
        android:gravity="center|start"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/lastname_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/manrope_regular"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:src="@drawable/send_ic"
            android:textColor="@color/black_clr" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/about_status_txt"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/background_phone_view"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/about_status_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1.8"
            android:background="@android:color/transparent"
            android:fontFamily="@font/manrope_regular"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:editable="false"
            android:src="@drawable/send_ic"
            android:textColor="@color/black_clr" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/edit_about"
            android:layout_width="30dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_14sdp"
            android:layout_weight="0.2"
            android:onClick="onClick"
            android:src="@drawable/edit_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/phone_number_txt"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/background_phone_view"
        android:gravity="center|start"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/phone_num_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/manrope_regular"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:src="@drawable/send_ic"
            android:textColor="@color/black_clr" />




    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/phone_number_txt"
        android:cursorVisible="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname_layout"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center|start"
        android:text="Phone Number"
        android:textColor="@color/grey_clr"
        android:textSize="@dimen/_12sdp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/about_status_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_layout"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:cursorVisible="false"
        android:focusable="false"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center|start"
        android:text="About"
        android:textColor="@color/grey_clr"
        android:textSize="@dimen/_12sdp"
        android:textStyle="normal" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:visibility="gone"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/bluecustom_bordered_ripple"
        android:fontFamily="@font/manrope_semibold"
        android:gravity="center"
        android:layout_below="@+id/phone_layout"
        android:text="@string/update"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />


</RelativeLayout>