<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/background_clr_lgn"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/childrelativeMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/background_clr_lgn"
        android:gravity="center">

        <com.advantal.shieldcrypt.utils_pkg.RoundedImageView2
            android:id="@+id/new_con_grp"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="0.4"
            android:background="@drawable/ic_contact_profile"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/new_con_grp">

            <TextView
                android:id="@+id/con_nm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_medium"
                android:gravity="center|start"
                android:maxLines="1"
                android:padding="@dimen/_1sdp"
                android:text="PPDF_112121.pdf"
                android:textColor="@color/black_clr"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal" />

        </LinearLayout>

        <com.advantal.shieldcrypt.utils_pkg.RoundedImageView2
            android:id="@+id/new_barcode"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/ic_qr_code" />

        <View
            android:id="@+id/profile_lay_view"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@+id/lay"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toEndOf="@+id/new_con_grp"
            android:background="@color/grey_clr" />
    </RelativeLayout>
</LinearLayout>